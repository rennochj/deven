#! /bin/bash

# -- Initialize -------------------------------------------------------------------------------------------------------

set -e

DEVEN_DIRECTORY="./.deven"
DEVEN_DESTROY=""

DEVEN_SSH_HOME=~/.ssh
DEVEN_SSH_PORT=2222
DEVEN_SSH_USER=deven
DEVEN_INSTANCE_NAME="deven"

# -- Process options --------------------------------------------------------------------------------------------------

usage() {
  echo "\
deven-compute [-h]                # help
              [-d]                # destroy 
              [-s]                # .ssh directory (default $DEVEN_SSH_HOME)
              [-p]                # ssh port (default - $DEVEN_SSH_PORT)
              [-n]                # deven instance name (default - $DEVEN_INSTANCE_NAME)
              [deven-directory]   # director of the deven configuration directory (default - $DEVEN_DIRECTORY)

All options must preceed the deven-directory argument.
"
}

while getopts "hds:p:n:" option
do

  case $option in

    h) usage ; exit ;;
    d) DEVEN_DESTROY="-destroy" ;;
    s) DEVEN_SSH_HOME=$OPTARG ;;
    p) DEVEN_SSH_PORT=$OPTARG ;;
    n) DEVEN_INSTANCE_NAME=$OPTARG ;;
    ?) usage ; exit ;;

  esac

done

shift $(expr $OPTIND - 1)

if [[ ! -z $@ ]]
then
  DEVEN_DIRECTORY=$1
fi

# -- Create SSH Keys --------------------------------------------------------------------------------------------------

if [ ! -f "$DEVEN_SSH_HOME/$DEVEN_INSTANCE_NAME-id_rsa" ]; then
    echo "Creating a new ssh private key - $DEVEN_SSH_HOME/$DEVEN_INSTANCE_NAME-id_rsa"
    ssh-keygen -t rsa -b 4096 -f "$DEVEN_SSH_HOME/$DEVEN_INSTANCE_NAME-id_rsa" -q -N ""
fi

# -- Execute ----------------------------------------------------------------------------------------------------------

if [[ -f "$DEVEN_DIRECTORY/deven-config" ]]
then
    source "$DEVEN_DIRECTORY/deven-config"
fi

if [[ -z $DEVEN_DESTROY ]]
then

  terraform -chdir="$DEVEN_DIRECTORY/compute" init -upgrade
  terraform -chdir="$DEVEN_DIRECTORY/compute" apply -auto-approve $DEVEN_DESTROY

else

  terraform -chdir="$DEVEN_DIRECTORY/compute" apply -auto-approve $DEVEN_DESTROY

fi

# -- Connect ----------------------------------------------------------------------------------------------------------

if [[ -z "$DEVEN_DESTROY" ]];
then

  DEVEN_HOST=$(terraform -chdir="$DEVEN_DIRECTORY/compute" output -raw "host")

  if [ ! -d $DEVEN_SSH_HOME/config.d ]; then

      echo "Creating ~/.ssh/config.d"
      mkdir -p $DEVEN_SSH_HOME/config.d

      if [ -f $DEVEN_SSH_HOME/config ]; then
          echo "Moving ~/.ssh/config"
          mv $DEVEN_SSH_HOME/config $DEVEN_SSH_HOME/config.d/
      fi

  fi

  touch $DEVEN_SSH_HOME/config.d/$DEVEN_INSTANCE_NAME.config
  printf "HOST $DEVEN_INSTANCE_NAME\n    HostName $DEVEN_HOST\n    User $DEVEN_SSH_USER\n    Port $DEVEN_SSH_PORT\n    IdentityFile $DEVEN_SSH_HOME/$DEVEN_INSTANCE_NAME-id_rsa\n    StrictHostKeyChecking no\n    UserKnownHostsFile /dev/null\n    NoHostAuthenticationForLocalhost no\n\n" > ~/.ssh/config.d/$DEVEN_INSTANCE_NAME.config

  touch $DEVEN_SSH_HOME/config
  printf "# This file is machine generated from the concatenation of all configuration files from config.d\n" > $DEVEN_SSH_HOME/config
  printf "# cat config.d/* > ./config\n\n" >> $DEVEN_SSH_HOME/config
  cat $DEVEN_SSH_HOME/config.d/* >> $DEVEN_SSH_HOME/config

  ssh-keygen -R "[$DEVEN_HOST]:$DEVEN_SSH_PORT" 

fi